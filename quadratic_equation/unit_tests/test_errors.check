#suite test_errors_

#test test_errors_1
double a = NAN;
double b = 124.12424;
double c = -4.54;
quadratic_roots roots;
roots = solve_equation(a, b, c);
ck_assert_int_eq(INVALID_ARGUMENTS, roots.err);

#test test_errors_2
double a = 5387873.587;
double b = 124.12424;
double c = -NAN;
quadratic_roots roots;
roots = solve_equation(a, b, c);
ck_assert_int_eq(INVALID_ARGUMENTS, roots.err);

#test test_errors_3
double a = 835293.958;
double b = INFINITY;
double c = -4.54;
quadratic_roots roots;
roots = solve_equation(a, b, c);
ck_assert_int_eq(INVALID_ARGUMENTS, roots.err);

#test test_errors_4
double a = 835293.958;
double b = 15346.245;
double c = -INFINITY;
quadratic_roots roots;
roots = solve_equation(a, b, c);
ck_assert_int_eq(INVALID_ARGUMENTS, roots.err);

#test test_errors_5
double a = 0.0;
double b = 0.0;
double c = 0.0;
quadratic_roots roots;
roots = solve_equation(a, b, c);
ck_assert_int_eq(1, (roots.err == ERROR_INFINITE_NUMBER_OF_ROOTS) || (roots.err == WARNING_INFINITE_NUMBER_OF_ROOTS));
